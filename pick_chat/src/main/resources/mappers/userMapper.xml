<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <mapper namespace="userMapper">
    <select id="list_user" resultType="com.example.domain.UserVO">
        select * from userlist
    </select>
    <select id="read_user" resultType="com.example.domain.UserVO">
        select * from userlist where userid = #{userid}
    </select>
    <select id="list_userimage" resultType="com.example.domain.UserImageVO">
        select i.imgpath from tbl_puser p, tbl_userimg i where p.userid=i.userid and p.userid=#{userid}
    </select>
    <select id="list_mytype" resultType="com.example.domain.MytypeVO">
        select c.content, m.* from tbl_type_category c, tbl_mytype m 
        where m.typeid=c.typeid and m.userid=#{userid}
    </select>
    <select id="list_userhobby" resultType="com.example.domain.HobbyVO">
        select c.content, h.* from tbl_type_category c, tbl_userhobby h 
        where h.hobbyid=c.typeid and h.userid=#{userid};
    </select>
    <select id="list_liketype" resultType="com.example.domain.LikeTypeVO">
        select c.content, l.* from tbl_type_category c, tbl_liketype l 
        where l.typeid=c.typeid and l.userid=#{userid}
    </select>
    <select id="list_likesender" resultType="com.example.domain.LikepeopleVO">
        select * from tbl_likepeople where sender=#{userid}
    </select>
    <select id="list_likereceiver" resultType="com.example.domain.LikepeopleVO">
        select * from tbl_likepeople where receiver=#{userid}
    </select>
    <select id="list_category" resultType="com.example.domain.CategoryVO">
        select * from tbl_type_category
    </select>
    <select id="list_hobbycategory" resultType="com.example.domain.CategoryVO">
        select * from tbl_hobby_category
    </select>
    <select id="checkid" resultType="int">
        select count(*) from tbl_puser where userid=#{userid}
    </select>
    <select id="checknickname" resultType="int">
        select count(*) from tbl_puser where usernickname=#{usernickname}
    </select>
    <select id="appointmentread" resultType="com.example.domain.UserVO">
    	select * from tbl_appointment where userid=#{userid}
    </select>
    <delete id="appointmentdelete">
        delete from tbl_appointment where userid=#{userid}
    </delete>
    <delete id="delete_blockuser">
        delete from tbl_blockuser where blockno=#{blockno}
    </delete>
    <select id="list_eachlike" resultType="String">
        select sender from tbl_likepeople where receiver = #{userid} and sender= ANY(select receiver from tbl_likepeople where sender = #{userid})
    </select>
</mapper>