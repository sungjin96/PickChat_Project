<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:layout_alignParentTop="true"
            android:background="#ff006c" />

        <ImageView
            android:id="@+id/soloimg"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="113sp"
            android:background="#9f9f9f"
            android:src="@drawable/a" />

        <LinearLayout
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="235sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/usernickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사용자 닉네임"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/userid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:text="사용자 아이디" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_name_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사용자 이름" />

            <TextView
                android:id="@+id/userjob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:text="사용자 직업" />

            <TextView
                android:id="@+id/userage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:text="사용자 나이" />

            <TextView
                android:id="@+id/localname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:text="사는 지역" />
        </LinearLayout>

        <TextView
            android:layout_below="@id/user_name_sub"
            android:id="@+id/userpoint"
            android:text="유저포인트"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name_sub"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="60sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/profile"
                android:layout_width="0px"
                android:layout_height="50sp"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:background="@drawable/background_rounding_red"
                android:text="프로필"
                android:textSize="20sp" />

            <Button
                android:id="@+id/charge"
                android:layout_width="0px"
                android:layout_height="50sp"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:background="@drawable/background_rounding_red"
                android:text="충전"
                android:textSize="20sp" />

            <Button
                android:id="@+id/read_contact"
                android:layout_width="0px"
                android:layout_height="50sp"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:background="@drawable/background_rounding_red"
                android:text="친구소개"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear1"
            android:layout_marginTop="5sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/notice"
                android:layout_width="0px"
                android:layout_height="70sp"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:src="@drawable/notice" />

            <ImageView
                android:id="@+id/terms_of_service"
                android:layout_width="0px"
                android:layout_height="70sp"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:src="@drawable/terms_of_service" />

            <ImageView
                android:id="@+id/friend_block"
                android:layout_width="0px"
                android:layout_height="70sp"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:src="@drawable/friend_block" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="공지사항"
                android:textColor="#000000" />

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="이용약관"
                android:textColor="#000000" />

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="내친구차단"
                android:textColor="#000000" />
        </LinearLayout>

        <View
            android:layout_width="340dp"
            android:layout_height="2px"
            android:layout_alignTop="@+id/linear4"
            android:layout_centerHorizontal="true"
            android:background="#000000" />

        <View
            android:layout_width="2px"
            android:layout_height="202dp"
            android:layout_alignBottom="@+id/linear5"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="9dp"
            android:layout_marginStart="137dp"
            android:background="#000000" />

        <View
            android:layout_width="2px"
            android:layout_height="202dp"
            android:layout_alignBottom="@+id/linear5"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="9dp"
            android:layout_marginEnd="137dp"
            android:background="#000000" />

        <LinearLayout
            android:id="@+id/linear4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear3"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/alarm"
                android:layout_width="0px"
                android:layout_height="70sp"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:src="@drawable/icon_favorite" />

            <ImageView
                android:id="@+id/faq"
                android:layout_width="0px"
                android:layout_height="70sp"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:src="@drawable/faq" />

            <ImageView
                android:id="@+id/account"
                android:layout_width="0px"
                android:layout_height="70sp"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:src="@drawable/icon_account" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear4"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="좋아요"
                android:textColor="#000000" />

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="FAQ"
                android:textColor="#000000" />

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="계정설정"
                android:textColor="#000000" />
        </LinearLayout>

    </RelativeLayout>

</ScrollView>
